{
  "name": "mydiary-project",
  "version": "1.0.0",
  "description": "Andela bootcamp project: MyDiary",
  "main": "server/server.js",
  "repository": "https://github.com/mindsworth/mydiary-project/",
  "author": "Chigoziem Nwaiwu <princegoziem@gmail.com>",
  "license": "MIT",
  "nyc": {
    "include": [
      "server/controllers/*.js",
      "server/models/*.js",
      "server/routes/*.js"
    ]
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "heroku-postbuild": "npx babel server/ --out-dir dist/ --ignore server/test",
    "start:dev": "nodemon --watch server --exec babel-node -- server/server.js",
    "web": "./node_modules/.bin/forever -m 5 server.js",
    "test": "nyc --reporter=html mocha --require babel-core/register server/test/**/*.test.js --exit && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2"
  }
}
