{
  "name": "mydiary-project",
  "version": "1.0.0",
  "description": "Andela bootcamp project: MyDiary",
  "main": "server/server.js",
  "repository": "https://github.com/mindsworth/mydiary-project/",
  "author": "Chigoziem Nwaiwu <princegoziem@gmail.com>",
  "license": "MIT",
  "nyc": {
    "include": [
      "server/controllers/*.js",
      "server/models/*.js",
      "server/routes/*.js"
    ]
  },
  "scripts": {
    "start": "yarn cross-env-shell NODE_ENV=production node ./dist/server.js",
    "heroku-postbuild": "npx babel server/ --out-dir dist/ --ignore server/test",
    "start:dev": "cross-env-shell NODE_ENV=development nodemon --watch server --exec babel-node server/server.js",
    "test2": "cross-env-shell NODE_ENV=test yarn drop:create:table && nyc --reporter=html mocha --require babel-core/register server/test/route.test.js --exit && nyc report",
    "test": "cross-env-shell NODE_ENV=test yarn drop:create:table && cross-env-shell NODE_ENV=test nyc --reporter=html mocha --opts ./mocha.opts server/test/**/*.test.js --exit && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migration": "sequelize db:migrate",
    "drop:create:table": "babel-node server/models/database/test_table.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.16.0",
    "cors": "^2.8.5",
    "cron": "^1.7.2",
    "cross-env": "^6.0.3",
    "decode": "^0.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^6.3.1",
    "nodemailer-juice": "^1.0.1",
    "nodemon": "^1.19.4",
    "pg": "^7.12.1",
    "sequelize": "^5.19.6",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "swagger-ui-express": "^4.1.2",
    "validatorjs": "^3.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  }
}
